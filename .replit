modules = ["nodejs-20", "web"]
run = "npm run dev"

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "dev-server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "database-setup"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "backend-server"

[[workflows.workflow]]
name = "dev-server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx vite --config vite.dev.config.ts --host 0.0.0.0 --port 5000"
waitForPort = 5000

[[workflows.workflow]]
name = "database-setup"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx drizzle-kit push"

[[workflows.workflow]]
name = "backend-server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "tsx backend/index.ts"
waitForPort = 3001

[[ports]]
localPort = 3001
externalPort = 3001
exposeLocalhost = true

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
run = ["sh", "-c", "npm run dev"]

[agent]
expertMode = true
